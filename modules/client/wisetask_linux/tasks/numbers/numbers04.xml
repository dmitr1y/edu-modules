<?xml version="1.0" encoding="windows-1251"?>
<task title="Двоичные числа">
    <description-params>
        <param name="m" type="1">
            <value text="пяти">5</value>
            <value text="шести">6</value>
        </param>
        <param name="n">
            <value text="четных">0</value>
            <value text="нечетных">1</value>
        </param>
        <param name="k" type="1">
            <value text="3">3</value>
            <value text="4">4</value>
        </param>
        <param name="el">
            <value text="нулей">0</value>
            <value text="единиц">1</value>
        </param>
    </description-params>
    <description>
        <![CDATA[Сколько существует двоичных ${n-text} ${m-text}значных чисел, количество ${el-text} в записи которых равно ${k}?]]>
    </description>
    <mathDescription>
        <sourceSet>
            <set type="DecartSet">
                <set type="NumericSet" first="1" last="1"/>
            <for name="i" first="1" last="${m}-2" inc="1">
                <set type="NumericSet" first="0" last="1"/>
            </for>
            <set type="NumericSet" first="${n}" last="${n}"/>
            </set>
    </sourceSet>
    <verifier type="SimpleVerifier">
        <function type="Equals">
        <function type="Add">
        <for name="i" first="1" last="${m}" inc="1">
        <function type="Equals">
            <function type="Projection" axis="${i}">
                <current-set-element/>
            </function>
            <constElement>${el}</constElement>
        </function>
        </for>
        </function>
               <constElement>${k}</constElement>
        </function>
    </verifier>
    </mathDescription>
</task>
