<?xml version="1.0" encoding="windows-1251"?>
<task title="Числа, у которых есть две одинаковые цифры, идущие подряд">
    <description>
        <![CDATA[Сколько существует m-значных чисел, записанных в p-ичной системе счисления, у которых есть две одинаковых цифры, идущие подряд? (m не больше p)]]>
    </description>
<verifier-params>
        <param name="m">
            <value text="дву">2</value>
            <value text="пяти">5</value>
        </param>
        <param name="n" type="1">
            <value text="десяти">9</value>
            <value text="восьме">7</value>
        </param>
        <param name="p" type="1">
            <value text="десяти">10</value>
            <value text="восьме">8</value>
        </param>
</verifier-params>
    <mathDescription>
        <sourceSet>
            <set type="DecartSet">
                <set type="NumericSet" first="1" last="${n}"/>
            <for name="i" first="1" last="${m}-1" inc="1">
                <set type="NumericSet" first="0" last="${n}"/>
            </for>
            </set>
    </sourceSet>
    <verifier type="SimpleVerifier">
    <function type="Or"> 
        <for name="i" first="1" last="${m}-1" inc="1">
        <function type="Equals">
            <function type="Projection" axis="${i}+1">
                <current-set-element/>
            </function>
            <function type="Projection" axis="${i}">
                <current-set-element/>
            </function>
        </function>
        </for>
    </function>
    </verifier>
    </mathDescription>
</task>
